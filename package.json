{
  "name": "did-resolver",
  "version": "0.1.0-alpha.0",
  "description": "Resolve DID documents",
  "repository": {
    "type": "git",
    "url": "https://github.com/uport-project/did-resolver.git"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "author": "Pelle Braendgaard <pelle.braendgaard@consensys.net>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "./node_modules/.bin/pack build",
    "test": "./node_modules/.bin/jest",
    "format": "prettier --write src/**/*"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "devDependencies": {
    "@pika/pack": "^0.3.6",
    "@pika/plugin-build-node": "^0.3.14",
    "@pika/plugin-build-web": "^0.3.14",
    "@pika/plugin-ts-standard-pkg": "^0.3.14",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.12.18",
    "jest": "^24.5.0",
    "prettier": "^1.16.4",
    "regenerator-runtime": "^0.12.1",
    "ts-jest": "^24.0.1",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ]
  }
}
